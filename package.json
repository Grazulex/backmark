{
  "name": "@grazulex/backmark",
  "version": "0.5.3",
  "description": "Markdown-native task management with colorful CLI and Kanban board",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "backmark": "./dist/cli.js"
  },
  "files": ["dist", "templates", ".claude", "README.md", "LICENSE"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Grazulex/backmark.git"
  },
  "bugs": {
    "url": "https://github.com/Grazulex/backmark/issues"
  },
  "homepage": "https://github.com/Grazulex/backmark#readme",
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc && node scripts/fix-imports.mjs",
    "start": "node dist/cli.js",
    "install:global": "npm run build && npm link",
    "uninstall:global": "npm unlink -g backmark",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check . && tsc --noEmit",
    "prepublishOnly": "npm run check && npm run build"
  },
  "keywords": ["task-management", "markdown", "cli", "kanban", "productivity"],
  "author": "Jean-Marc Strauven",
  "license": "MIT",
  "dependencies": {
    "@types/lokijs": "^1.5.14",
    "@types/react": "^18.3.18",
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.0.0",
    "gray-matter": "^4.0.3",
    "ink": "^5.0.1",
    "inquirer": "^12.2.0",
    "js-yaml": "^4.1.0",
    "lokijs": "^1.5.12",
    "ora": "^8.1.1",
    "react": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
